<main>
	<section>
		<div class="form">
			<h1 class="form__product-title">Створення товару</h1>
			<form method="POST" action="/product-create">
				<div class="form__card">
					<h2 class="form__card-title">Інформація про товар</h2>
					<div class="form__field">
						<div class="form__double">
							<div class="form__field-info">
								<label for="name" class="form__label">Назва товару</label>
								<input type="name" name="name" class="form__input">
							</div>
							<div class="form__field-info">
								<label for="price" class="form__label">Ціна</label>
								<input type="price" name="price" class="form__input">
							</div>

						</div>

					</div>
					<div class="form__field">
						<div class="info">
							<label for="description " class="form__label">Короткий опис товару</label>
							<input type="description" name="description" class="form__input-content">
							<p class="card__info-text">Відображається в картці товару</p>
						</div>

					</div>
					<button class="form__button-product">Створити товар</button>
				</div>
			</form>
		</div>

	</section>

</main>