<main class="main">
	{{#with data}}
	<form method="POST" action="/purchase-edit?id={{id}}" class="form-card">
		{{> heading title = "Змінна данних" }}

		<div>
			{{> field-info label="ID:" text = id }}
		</div>
		<div class="order-info">
			{{> field label="Ім'я:" value =firstname name ="firstname" }}
			{{> field label="Прізвище:" value =lastname name ="lastname"}}
			{{> field label="Телефон:" value =phone name ="phone"}}
			{{> field label="Електрона пошта:" value =email name ="email"}}
		</div>


		{{> button text = 'Змінити данні'}}

	</form>
	{{/with}}
</main>